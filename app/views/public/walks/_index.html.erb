<div>
  <%= form_with url: walks_path , method: :get do |f| %>
    <%= f.select :tag_id, Tag.pluck(:prefecture, :id), :selected => params[:tag_id] %>
    <%= f.submit '検索' %>
  <% end %>
</div>

<div class="content">
  <% if params[:tag_id] %>
    <h2><%= tag.prefecture %>の検索結果</h2>
  <% else %>
    <h2>お散歩投稿一覧</h2>
  <% end %>
  
  <% if walks.first %>
    <% walks.each do |walk| %>
    <div><%= walk.tag.prefecture %></div>
    <div><%= image_tag walk.get_walk_image, size: '200x150' %></div>
    <div>
      <%= image_tag walk.user.get_profile_image, size: '50x50' %>
      <%= walk.user.name %>
    </div>
    <div><%= walk.title %></div>
    <div><%= walk.opinion %></div>
    <div><%= walk.dogrun_name %></div>
    <div><%= walk.facility_i18n %></div>
    <div><%= walk.size_i18n %></div>
    <div>
      <% if admin_signed_in? %>
        <%= link_to '詳しく見る', admin_walk_path(walk.id) %>
      <% else %>
        <%= link_to '詳しく見る', walk_path(walk.id) %>
      <% end %>
    </div>
    <% end %>
  <% else %>
    <h2>まだ投稿されていません</h2>
  <% end %>