<% if walk.bookmarked_by?(current_user) %>
  <p>
    <%= link_to walk_bookmarks_path(walk), method: :delete, remote: true do %>
      <i class="fas fa-paw"></i> ブックマーク中（<%= walk.bookmarks.count %>件）
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to walk_bookmarks_path(walk), method: :post, remote: true do %>
      <i class="fas fa-paw"></i> ブックマークする（<%= walk.bookmarks.count %>件）
    <% end %>
  </p>
<% end %>