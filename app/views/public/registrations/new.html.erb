<div class="container mt-4 px-sm-0">
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row  no-gutters">
    <div class="col-md-4 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h4 class="text-center pt-5">The Paw Stationに会員登録</h4>
        <div class="form-body p-4">
          <%= form_with model: @user, url: user_registration_path do |f| %>
            <div class="input-group mb-3 mt-4">
              <div class="input-group-prepend">
                <span class="input-group-text rounded" aria-hidden="true"><i class="fas fa-user"></i></span>
              </div>
              <div class="ml-3"><%= f.text_field :name, autofocus: true, placeholder: "表示させたい名前", class: "form-control" %></div>
            </div>
          
            <div class="input-group mb-3 mt-4">
              <div class="input-group-prepend">
                <span class="input-group-text rounded" aria-hidden="true"><i class="fas fa-envelope"></i></span>
              </div>
              <div class="ml-3"><%= f.email_field :email,  autocomplete: "email", placeholder: "user@example.com", class: "form-control" %></div>
            </div>
          
            <div class="input-group mb-3 mt-4">
              <div class="input-group-prepend">
                <span class="input-group-text rounded" aria-hidden="true"><i class="fas fa-lock"></i></span>
              </div>
              <div class="ml-3"><%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード入力", class: "form-control" %></div>
            </div>
          
            <div class="input-group mb-3 mt-4">
              <div class="input-group-prepend">
                <span class="input-group-text rounded" aria-hidden="true"><i class="fas fa-lock"></i></span>
              </div>
              <div class="ml-3"><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認用", class: "form-control" %></div>
            </div>
            <hr>
            <%= f.submit "会員登録する", class: "btn btn-block btn-success" %>
          <% end %>
        
        <div class="mt-2"><%= render "public/shared/links" %></div>
      </div>
    </div>
  </div>
</div>