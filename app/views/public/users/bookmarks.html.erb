<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-3 col-sm-3'>
      <%= render 'info', user: @user %>
    </div>
    
    <div class='col-md-8 col-sm-8 offset-1'>
      <h3 class="mt-2"><i class="fas fa-paw"></i> Bookmarks</h3>
      <table class="my-3">
        <thead class="border-bottom">
          <tr>
            <th>タイトル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody class="mt-2">
          <% @bookmark_walks.each do |walk| %>
            <tr>
              <td class="pt-3 pr-4 text-wrap"><%= walk.title %></td>
              <td class="pt-3 pr-4 text-wrap"><%= walk.opinion %></td>
              <td class="pt-3 pr-1"><%= link_to 'Show', walk_path(walk.id), class: "btn btn-sm btn-outline-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>