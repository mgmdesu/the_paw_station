<div class='container mt-md-5'>
  <div class='row'>
    <div class='col-md-4'>
      <%= render 'info', user: @user %>
    </div>
    
    <div class='col-md-7 offset-md-1'>
      <h3>Bookmarks</h3>
      <div>
        <% @bookmark_walks.each do |walk| %>
          <div><%= image_tag walk.get_walk_image, size: '100x100' %></div>
          <div><%= walk.title %></div>
          <div><%= walk.opinion %></div>
          <div><%= link_to '詳細を見る', walk_path(walk.id), class: "btn btn-outline-dark rounded-pill" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>