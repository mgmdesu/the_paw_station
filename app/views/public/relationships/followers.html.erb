<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
      <h2 class="text-center"><%= @user.name %>'s All Followers</h2>
        <hr>
        <% if @users.exists? %>
          <%= render 'public/users/relationships', users: @users %>
        <% else %>
          <p class="mt-5">フォローされているユーザーは現在いません</p>
        <% end %>
    </div>
  </div>
</div>