<% if current_user != user %>  
  <% if current_user.following?(user) %>
    <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-outline-info btn-block" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-outline-info btn-block" %>
  <% end %>
<% end %>