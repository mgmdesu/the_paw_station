<% if group.is_owned_by?(current_user) %>
  <%= link_to '編集', edit_group_path(group), class: "btn btn-outline-success" %>
<% elsif group.includes_user?(current_user) %>
  <%= link_to 'Leave', group_group_users_path(group), method: :delete, remote: true, class: "btn btn-danger" %>
<% else %>
  <%= link_to 'Join', group_group_users_path(group), method: :post, remote: true, class: "btn btn-outline-success" %>
<% end %>