<div class="container mt-5">
  <h2 class="meetup-detail mb-5">Meetup Detail</h2>
  <div class="row">
    <div class="col-md-7 col-sm-10">
      <div class="card">
        <div class="card-header">
          <strong>
            <%= image_tag @group.get_group_image, size: '40x40', class: "rounded-circle" %>
            <%= @group.group_name %>
          </strong>
        </div>
        <div class="card-body">
          <div class="card-text">・ 開催日時：<%= @group.event_date.strftime("%Y年%m月%d日") %> <%= @group.start_at.strftime("%H時%M分") %></div></br>
          <div class="card-text">・ 開催場所：<%= @group.location %></div></br>
          <div class="card-text">・ イベントの詳細や注意事項など：</div>
          <div class="card-text"><%= safe_join(@group.explanation.split("\n"),tag(:br)) %></div></br>
          <div class="card-text">・ 主催者： @<%= @group.owner.name %></div></br>
          <div class="card-text">・ 参加予定メンバー：</div>
          <div id="members_count_list"><%= render 'member', group: @group %></div>
          <div id="join_btn", class="text-right"><%= render 'btn', group: @group %></div>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-sm-10">
      <div class="comment-counter"><%= render 'public/group_comments/counter', group: @group %></div>
      <div class="group-comments"><%= render 'public/group_comments/group_comment', group: @group, group_comment: @group_comment %></div>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto mt-5">
      <i class="fas fa-th-list"></i><%= link_to '一覧へ戻る', groups_path, class: "btn btn-default-v3" %>
    </div>
  </div>
</div>