<div class="row no-gutters rounded">
  <div class="col-md-7 col-sm-10">
    <% walk.walk_comments.each do |walk_comment| %>
      <div class="card w-75 mb-4">
        <div class="card-body">
          <p class="card-text">
            <%= link_to user_path(walk_comment.user.id) do %>
              <%= image_tag walk_comment.user.get_profile_image, size: '30x30', class: "rounded-circle" %>@
              <%= walk_comment.user.name %>
            <% end %>
          </p>
          <p class="card-text text-wrap"><%= walk_comment.walk_comment %></p>
          <p class="card-text">
            <small class="text-muted">
              <%= walk_comment.created_at.strftime('%Y/%m/%d') %>
            </small>
            <%= link_to '削除', admin_walk_walk_comment_path(walk_comment.walk, walk_comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-outline-danger text-right" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>