<div class="container mt-5">
  <div class="row border rounded">
    <div class="col-md-4 mx-auto my-auto">
      <div class="p-4"><%= image_tag @post_dog.get_post_dog_image, size: '350x250' %></div>
    </div>

    <div class="col-md-6 offset-md-1 pt-5">
      <table>
        <tbody>
          <tr>
            <td>
              <%= image_tag @post_dog.user.get_profile_image, size: '40x40', class: "rounded-circle" %> @
              <%= @post_dog.user.name %>
            </td>
          </tr>
          <tr>
            <td><%= @post_dog.body %></td>
          </tr>
        </tbody>
      </table>
        
      <div class="pt-3">
        <small><%= @post_dog.created_at.strftime('%Y/%m/%d') %></small>
      </div>
      <div class="text-right">
        <%= link_to '削除', admin_post_dog_path, method: :delete, data: { confirm: '本当に削除しますか？' } , class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  </div>

  <h5 class="my-5">Comments（ <i class="far fa-comments"></i> <%= @post_dog.post_comments.count %> ）</h5>
  <%= render 'dog_comment', post_dog: @post_dog, post_comment: @post_comment %>
    
  <div class="text-center">
    <i class="fas fa-th-list"></i><%= link_to '一覧へ戻る', admin_post_dogs_path, class: "btn btn-default-v3" %>
  </div>
</div>